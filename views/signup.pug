extends layout 

block content 
  .container
    h1.mb-5 Signup
    form(action="", method="post") 
      .mb-3 
        label.form-label(for="firstName") First Name
        input.form-control(type='text' name='firsNname' required)
      .mb-3 
        label.form-label(for="lastName") Last Name
        input.form-control(type='text' name='lastName' required)        
      .mb-3 
        label.form-label(for="email") Email
        input.form-control(type='email' name='email' required) 
      .mb-3 
        label.form-label(for="password") Password
        input.form-control(type='password' name='password' required)  
      .mb-3 
        label.form-label(for="confirmPassword") Confirm Password
        input.form-control(type='password' name='confirmPassword' required)
      .mb-3 
        button.btn.btn-primary(type="submit") Create Account  
